{% extends "base.jinja2" %}

{% block metadesc %}
    <meta name="description" content="DuckHunt Shop">
{% endblock %}

{% block title %}
    DuckHunt V4 Shop
{% endblock %}

{% block head %}

{% endblock %}

{% block content %}
    <h1>DuckHunt shop designs</h1>

    <div class="row">
        {% for design_info in designs %}
            <div class="col col-12 col-md-6 col-lg-3 mt-2 mb-2">
                <!-- Product info -->
                <div class="card background-normal h-100 nice-card-borders">

                    <div class="card-body">
                        <div class="h4 card-title flex-grow-1 text-white-75">
                            {{ design_info['design_name'] }}
                        </div>
                    </div>
                    <picture>
                        <source srcset="{{ design_info['photo'].url }}.webp" type="image/webp"/>
                        <img src="{{ design_info['photo'].url }}"
                         width="{{ design_info['photo'].width }}" height="{{ design_info['photo'].height }}"
                         class="card-img-top img-fluid"
                         alt="{{ design_info['design_name'] }} image">
                    </picture>
                    <div class="card-footer">
                        <div class="row align-content-center">
                            <div class="col">
                                <a href="{{ url('shop_design_info', pk=design_info['design_id']) }}"
                                   type="button"
                                   class="btn btn-outline-secondary">
                                    View more
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}