{% extends "base.jinja2" %}

{% block metadesc %}
    <meta name="description" content="All the DuckHunt servers{% if language %} in {{ language }}{% endif %}.">
{% endblock %}

{% block title %}
    DuckHunt V4 - Servers{% if language %} in {{ language }}{% endif %}
{% endblock %}

{% block content %}
    <h1>DuckHunt servers{% if language %} in {{ language }}{% endif %}</h1>

    <div class="container d-none d-lg-block pb-3">
        <div class="col text-center">
            {% for filter in filters %}
                <a class="btn btn-sm
                          {% if filter == sw %}btn-outline-info disabled{% else %}btn-outline-secondary{% endif %}"
                   href="{{ request.path }}?sw={{ filter.lower() }}">{{ filter.upper() }}</a>
                {% if not loop.last %}
                <span class="d-none d-xxl-inline"> - </span>
                {% endif %}
            {% endfor %}

            {% if has_others %}
                <span class="d-none d-xxl-inline"> - </span>
            <a href="{{ request.path }}?sw=others"
               class="btn btn-sm {% if sw == "others" %}btn-outline-info disabled{% else %}btn-outline-secondary{% endif %}">
                ü¶Ü</a>
            {% endif %}
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
        {% for guild, channels in guilds.object_list %}
            <div class="col">
                <div class="card background-normal h-100 nice-card-borders">
                    <div class="card-body">
                        <a href="{{ url('guild', pk=guild) }}" class="text-decoration-none">
                            <div class="h4 card-title flex-grow-1 text-white-75">{{ channels[0].guild_name }}</div>
                        </a>
                    </div>
                    <ul class="list-group list-group-flush">
                        {% for channel in channels %}
                            <li class="list-group-item background-normal border-bottom-0">
                                <div class="row row-cols-2">
                                    <a href="{{ url('channel', pk=channel.channel_id) }}" class="text-blurple col-8">
                                        <div>
                                            #{{ channel.channel_name }}
                                        </div>
                                    </a>

                                    <a href="{{ url('channel', pk=channel.channel_id) }}" class="text-blurple col-3">
                                        <div>
                                            <span class="badge bg-dark text-white-75">{{ channel.players_count }} players</span>
                                        </div>
                                    </a>
                                    <a href="{{ url('channel_settings', pk=channel.channel_id) }}" class="text-decoration-none col-1" title="Settings">
                                        <div>
                                            ‚öôÔ∏è
                                        </div>
                                    </a>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="d-flex justify-content-center">
        <nav aria-label="Page navigation" class="d-none d-lg-block" style="margin-top: 1em;">
            <ul class="pagination pagination-sm">
                {% if guilds.has_previous() %}
                    <li class="page-item"><a href="{{ request.path }}?page=1{% if sw %}&sw={{ sw }}{% endif %}" class="page-link">First</a>
                    </li>
                {% else %}
                    <li class="page-item disabled"><a href="#" class="page-link" tabindex="-1"
                                                      aria-disabled="true">First</a>
                    </li>
                {% endif %}

                {% for i in guilds.get_pages_to_show() %}
                    {% if i == guilds.number %}
                        <li class="page-item active" aria-current="page">
                            <span class="page-link">{{ i }}</span>
                        </li>
                    {% else %}
                        <li class="page-item"><a href="{{ request.path }}?page={{ i }}{% if sw %}&sw={{ sw }}{% endif %}"
                                                 class="page-link">{{ i }}</a></li>
                    {% endif %}
                {% endfor %}

                {% if guilds.has_next() %}
                    <li class="page-item"><a href="{{ request.path }}?page={{ guilds.paginator.num_pages }}{% if sw %}&sw={{ sw }}{% endif %}" class="page-link">Last</a>
                    </li>
                {% else %}
                    <li class="page-item disabled"><a href="#" class="page-link" tabindex="-1"
                                                      aria-disabled="true">Last</a></li>
                {% endif %}
            </ul>
        </nav>
        <nav aria-label="Page navigation" class="d-lg-none" style="margin-top: 1em;">
            <ul class="pagination pagination">
                {% if guilds.has_previous() %}
                    <li class="page-item"><a href="{{ request.path }}?page=1{% if sw %}&sw={{ sw }}{% endif %}"
                                             class="page-link">First</a>
                    </li>
                    <li class="page-item"><a href="{{ request.path }}?page={{ guilds.previous_page_number() }}{% if sw %}&sw={{ sw }}{% endif %}"
                                             class="page-link">{{ guilds.previous_page_number() }}</a>
                    </li>
                {% else %}
                    <li class="page-item disabled"><a href="#" class="page-link" tabindex="-1"
                                                      aria-disabled="true">First</a>
                    </li>
                {% endif %}

                <li class="page-item active" aria-current="page">
                    <span class="page-link">{{ guilds.number }}</span>
                </li>

                {% if guilds.has_next() %}
                    <li class="page-item"><a href="{{ request.path }}?page={{ guilds.next_page_number() }}{% if sw %}&sw={{ sw }}{% endif %}"
                                             class="page-link">{{ guilds.next_page_number() }}</a>
                    </li>
                    <li class="page-item"><a href="{{ request.path }}?page={{ guilds.paginator.num_pages }}{% if sw %}&sw={{ sw }}{% endif %}" class="page-link">Last</a>
                    </li>
                {% else %}
                    <li class="page-item disabled"><a href="#" class="page-link" tabindex="-1"
                                                      aria-disabled="true">Last</a></li>
                {% endif %}
            </ul>
        </nav>
    </div>

{% endblock %}