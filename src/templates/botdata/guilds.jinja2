{% extends "base.jinja2" %}

{% block title %}
    DuckHunt V4 - Guilds
{% endblock %}

{% block content %}
    <h1>DuckHunt guilds</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
        {% for guild in guilds %}
            <div class="col">
                <div class="card background-normal h-100">
                    <div class="card-body">
                        <a class="text-decoration-none" href="{{ url('guild', pk=guild.pk) }}">
                            <div class="h4 card-title flex-grow-1">{{ guild.name }}</div>
                        </a>
                    </div>
                    <ul class="list-group list-group-flush">
                        {% for channel in guild.channels.all() %}
                            <li class="list-group-item background-dark">
                                <div class="row row-cols-2">
                                    <div class="col-8">
                                        <a href="{{ url('channel', pk=channel.pk) }}">#{{ channel.name }}</a>
                                    </div>
                                    <div class="col-3">
                                        <span class="badge bg-info text-dark">{{ channel.player_count }} players</span>
                                    </div>
                                    <div class="col-1">
                                        <a class="text-decoration-none" title="Settings" href="{{ url('channel_settings', pk=channel.pk) }}">⚙️</a>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}